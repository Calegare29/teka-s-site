  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    // Fade-in on scroll
    const faders = document.querySelectorAll('.fade-in');
    const appearOptions = { threshold: 0.3 };

    const appearOnScroll = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (!entry.isIntersecting) return;
        entry.target.classList.add("visible");
        observer.unobserve(entry.target);
      });
    }, appearOptions);

    faders.forEach(fader => appearOnScroll.observe(fader));

    // Schedule button and datepicker
    const scheduleBtn = document.getElementById('scheduleBtn');
    const dateInput = document.getElementById('datePickerInput');
    const hiddenScheduled = document.getElementById('scheduledDatetimeHidden');

    let fpInstance = null;

    scheduleBtn.addEventListener('click', () => {
      if (!fpInstance) {
        fpInstance = flatpickr(dateInput, {
          enableTime: true,
          dateFormat: "Y-m-d H:i",
          minDate: "today",
          onClose: function(selectedDates, dateStr, instance) {
            if (dateStr) {
              // Atualiza o botão para mostrar a data selecionada
              scheduleBtn.textContent = `Scheduled: ${dateStr}`;
              // Oculta o input para não poluir visual
              dateInput.style.display = 'none';
              // Salva no input hidden para envio no formulário
              hiddenScheduled.value = dateStr;
            }
          }
        });
      }
      dateInput.style.display = 'block';
      dateInput.focus();
    });

    // Enviar a mensagem com a data agendada embutida
    const contactForm = document.getElementById('contactForm');
    contactForm.addEventListener('submit', (e) => {
      if (!hiddenScheduled.value) {
        e.preventDefault();
        alert('Please schedule your call date and time before sending the message.');
        scheduleBtn.click();
        dateInput.focus();
      } else {
        // O formulário será enviado, pode implementar backend para enviar SMS para o seu celular
        // Aqui está enviando por email via mailto: para seuemail@example.com (troque para seu email real)
      }
    });
  </script>
